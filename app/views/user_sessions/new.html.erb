<h1>Efetue login</h1>

<% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_session.errors.count, "erro") %> impediu o andamento da operação:</h2>

      <ul>
        <% @user_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @user_session do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :login %>
    <%= error_tag @user_session, :login %>
  </p>
  <p>
    <%= f.label :password, "Senha" %>
    <%= f.password_field :password %>
    <%= error_tag @user_session, :password %>
  </p>
  <p>
    <%= f.submit "Efetuar login" %>
  </p>
<% end %>

<p><%= link_to "Novo usuário", new_usuario_path %></p>
<p><%= link_to "Esqueci minha senha" , new_senha_reset_path %> </p>
